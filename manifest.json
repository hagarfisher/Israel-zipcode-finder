{
    "name": "My ext",
    "version": "0.1",
    "description": "my desc",
    "permissions": [
        "activeTab",
        "<all_urls>"
    ],
    "content_scripts": [
        {
            "matches": ["http://*/*", "https://*/*"],
            "js": ["content_script.js"]
        }
    ],
    "icons": {
        "128": "icon128.png"
    },
    "browser_action": {
        "default_title": "My ext",
        "default_icon": "icon128.png",
        "default_popup": "popup.html"
    },
    "manifest_version": 2,
    "content_security_policy": "script-src 'self' https://ajax.googleapis.com object-src 'self'"
}